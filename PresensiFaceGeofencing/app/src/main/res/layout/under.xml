<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialogParent"
    android:layout_width="380dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_marginEnd="10dp"
            android:id="@+id/btnSpinAndWinRedeem"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="right"
            android:src="@drawable/close" />
        <View
            android:layout_marginEnd="20dp"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:background="#BFFFFFFF" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="230dp"
        android:elevation="10dp"
        android:gravity="center"
        app:cardBackgroundColor="@color/whiteCardColor"
        app:cardCornerRadius="11dp"
        tools:targetApi="lollipop">
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/maintenance"
            android:orientation="vertical">
            <com.example.presensifacegeofencing.customfonts.GoMytext
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="10dp"
                android:text="@string/under_nconstruction"
                android:textColor="#03A9F4"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>